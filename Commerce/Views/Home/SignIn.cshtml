    <div class="row mt-5 mb-5">
        <div class="col-2">
            <button type="button" class="btn btn-danger" id="loginBtn">Sign in</button>
        </div>

        <div class="col-2">
            <button type="button" class="btn btn-danger" id="wantRegisterBtn" onclick="location.href = '@Url.Action("SignUp","Home")';">
